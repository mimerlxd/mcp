{
  "name": "mcp-knowledge-service",
  "version": "1.0.0",
  "description": "MCP-based knowledge and rules suite for Tailscale networks",
  "main": "dist/server.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/server.js",
    "start:mcp": "node dist/server.js mcp",
    "start:http": "node dist/server.js http",
    "dev": "tsx watch src/server.ts",
    "dev:mcp": "tsx watch src/server.ts mcp",
    "dev:http": "tsx watch src/server.ts http",
    "lint": "eslint src/**/*.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "clean": "rm -rf dist",
    "migrate": "node dist/scripts/migrate.js"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^0.4.0",
    "@libsql/client": "^0.4.3",
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "openai": "^4.28.0",
    "zod": "^3.22.4",
    "dotenv": "^16.4.5",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/cors": "^2.8.17",
    "@types/node": "^20.11.17",
    "typescript": "^5.3.3",
    "tsx": "^4.7.1",
    "eslint": "^8.56.0",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "jest": "^29.7.0",
    "@types/jest": "^29.5.12",
    "ts-jest": "^29.1.2"
  },
  "keywords": [
    "mcp",
    "knowledge",
    "tailscale",
    "vector-search",
    "libsql"
  ],
  "author": "",
  "license": "MIT"
}